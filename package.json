{
  "name": "overdrivedownload",
  "version": "0.9.1",
  "description": "Download audiobooks from Overdrive",
  "main": "index.mjs",
  "bin": {
    "odm": "./cli.mjs"
  },
  "scripts": {
    "start": "node index.mjs",
    "test": "node tests/index.tests.mjs",
    "server": "node web/server.mjs",
    "docker-build": "docker build . -t johngully/overdrive-download",
    "docker-tag": "docker tag johngully/overdrive-download johngully/overdrive-download:v$npm_package_version",
    "docker-publish": "docker push johngully/overdrive-download:v$npm_package_version",
    "docker-up": "docker-compose up -d",
    "docker-down": "docker-compose down --volumes",
    "dp": "npm run docker-build && npm run docker-tag && npm run docker-publish",
    "np": "npx np",
    "publish": "npm run np && npm run dp"
  },
  "author": "John Gully",
  "license": "MIT",
  "dependencies": {
    "@jsbits/get-package-version": "^1.0.3",
    "@xmldom/xmldom": "^0.8.1",
    "axios": "^0.26.0",
    "chalk-template": "^0.4.0",
    "commander": "^9.0.0",
    "convict": "^6.2.1",
    "convict-format-with-validator": "^6.2.0",
    "cors": "^2.8.5",
    "es6-dynamic-template": "^2.0.0",
    "express": "^4.17.3",
    "fs-extra": "^10.0.1",
    "globby": "^13.1.1",
    "junk": "^4.0.0",
    "log-symbols": "^5.1.0",
    "log-update": "^5.0.0",
    "node-id3": "^0.2.3",
    "puppeteer": "^13.4.1",
    "uuid": "^8.3.2",
    "xpath": "^0.0.32"
  }
}
